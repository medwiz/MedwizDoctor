<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctors_nav.xml"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.medwiz.medwizdoctor.ui.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.medwiz.medwizdoctor.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.medwiz.medwizdoctor.ui.analysis.AnalysisFragment"
        android:label="AnalysisFragment" />
    <fragment
        android:id="@+id/appointmentFragment"
        android:name="com.medwiz.medwizdoctor.ui.appointment.AppointmentFragment"
        android:label="AppointmentFragment" >
        <action
            android:id="@+id/action_appointmentFragment_to_patientDetailsFragment"
            app:destination="@id/patientDetailsFragment" />
        <action
            android:id="@+id/action_appointmentFragment_to_patientHistoryFragment"
            app:destination="@id/patientHistoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.medwiz.medwizdoctor.ui.auth.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.medwiz.medwizdoctor.ui.auth.signUp.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/patientDetailsFragment"
        android:name="com.medwiz.medwizdoctor.ui.appointment.PatientDetailsFragment"
        android:label="PatientDetailsFragment" />
    <fragment
        android:id="@+id/patientHistoryFragment"
        android:name="com.medwiz.medwizdoctor.ui.history.PatientHistoryFragment"
        android:label="PatientHistoryFragment" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.medwiz.medwizdoctor.ui.profile.EditProfileFragment"
        android:label="EditProfileFragment" >
        <action
            android:id="@+id/action_editProfileFragment_to_addClinicFragment"
            app:destination="@id/addClinicFragment" />
    </fragment>
    <fragment
        android:id="@+id/addClinicFragment"
        android:name="com.medwiz.medwizdoctor.ui.clinic.AddClinicFragment"
        android:label="AddClinicFragment" >
        <action
            android:id="@+id/action_addClinicFragment_to_clinicDetailsFragment"
            app:destination="@id/clinicDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/clinicDetailsFragment"
        android:name="com.medwiz.medwizdoctor.ui.clinic.ClinicDetailsFragment"
        android:label="ClinicDetailsFragment" />
</navigation>