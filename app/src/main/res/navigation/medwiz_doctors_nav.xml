<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctors_nav.xml"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.medwiz.medwizdoctor.ui.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.medwiz.medwizdoctor.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.medwiz.medwizdoctor.ui.analysis.AnalysisFragment"
        android:label="AnalysisFragment" />
    <fragment
        android:id="@+id/appointmentFragment"
        android:name="com.medwiz.medwizdoctor.ui.appointment.AppointmentFragment"
        android:label="AppointmentFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.medwiz.medwizdoctor.ui.auth.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.medwiz.medwizdoctor.ui.auth.signUp.SignUpFragment"
        android:label="SignUpFragment" />
</navigation>